@model IEnumerable<aspnet_tut1.Models.DetailedLeaveTypeViewModel>

@{
    ViewData["Title"] = "Leave Types";
}

    <h1>Leave Types</h1>

<p>
    <a class="btn btn-success" asp-action="Create"> <i class="fas fa-plus-circle"></i>  Create New  </a>
</p>
<table id ="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <a type="button" asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                    <a type="button" asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                    <a  type="button" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')"><i class="fas fa-trash-alt"></i></a>

                </div>
                
    
    @*<a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {

<script>
    $(document).ready(function () {
            $('#tblData').DataTable();
    });
</script>

}
