@model aspnet_tut1.Models.CreateLeaveAllocationViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    "Number Updated"
    @Model.NumberUpdated
</p>

<p>
    <a class="btn" asp-action="ListEmployees">List All Employees</a>
</p>
<table id ="tblData" class="table">
    <thead>
        <tr>

            <th>
                Leave Types
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @*@Html.ActionLink("Allocate to Employees", "SetLeave", new { item.Id })*@
                    <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id"> <i class="fa fa-pencil"></i>Allocate</a>
                </td>
            </tr>
        }
    </tbody>
</table>
